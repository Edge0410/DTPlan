<!DOCTYPE html>

<html>
    <head>
        <%- include("../page_fragments/head.ejs") %>
    </head>

    <body>
        <header>
            <%- include("../page_fragments/header.ejs") %>
        </header>

        <main>
            <h3 class="centered">Register</h3>
            <div class="centered">
                <form method="post" action="/complete-register">
                    <label>
                        <h5 class="centered">Inaltime (in cm)</h5>
                        <input type="number" name="height" value="170" required/>
                    </label>
                    <br/>
                    <label>
                        <h5 class="centered">Greutate (in Kg)</h5>
                        <input type="number" name="weight" value="65" required/>
                    </label>
                    <br/> 
                    <label>
                        <br/>
                        <label for="gender"> <h5 class="centered">Gender:</h5> </label>
                            <select name="gender">
                                <option value="male" selected>Male</option>
                                <option value="female">Female</option>
                            </select>
                    </label>
                    <br/>
                    <br/>
                    <label>
                        <h5 class="centered">Date of birth:</h5>
                        <input type="date" name="birthday" value="2002-10-05"> 
                        <label>
                    <br/>
                    <button type="submit" value="submit">Update profile</button>
                </form>
            </div>
        </main>

        <footer>
            <%- include("../page_fragments/footer.ejs") %>
        </footer>
    </body>
</html>