<!DOCTYPE html>

<html>
    <head>
        <%- include("../page_fragments/head.ejs") %>
    </head>

    <body>
        <header>
            <%- include("../page_fragments/header.ejs") %>
        </header>

        <main>
            <% if(locals.user){ %>
            <h3 class="centered"> Esti deja logat!</h3>
            <% } else { %>
            <h3 class="centered">Login</h3>
            <div class="centered">
                <form method="post" action="/login">
                    <label>
                        <h5 class="centered">Username</h5>
                        <i class="fa-solid fa-user"></i>
                        <input type="text" name="username" required/>
                    </label>
                    <br/>
                    <label>
                        <h5 class="centered">Password</h5>
                        <i class="fa-sharp fa-solid fa-lock"></i>
                        <input type="password" name="password" required/>
                    </label>
                    <br/> 
                    <button type="submit" value="submit">Login</button>
                </form>
                <img src="/assets/images/dashb-login.png" style="display: block; margin: auto; width: 150px; height: 150px;">

            </div>

            <% } %>
        </main>

        <footer>
            <%- include("../page_fragments/footer.ejs") %>
        </footer>
    </body>
</html>